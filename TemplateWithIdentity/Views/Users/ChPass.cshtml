@model ProfileVM

 <main id="main" class="main">
    <div class="pagetitle">
        <h1>بيانات المستخدمين</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">الصفحة الرئيسية</a></li>
                <li class="breadcrumb-item"> المستخدم  </li>
                <li class="breadcrumb-item active">تغيير كلمة المرور</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->


    <section class="section profile">
      <div class="row">
        <div class="col-xl-4">

          <div class="card">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

              <img src="~/assets/img/avatars/1.png" alt="Profile" class="rounded-circle">
             <h2>@Model.Name</h2>
              <h3>@Model.UserName</h3>
             
             
            </div>
          </div>

        </div>

        <div class="col-xl-8">

          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <a class="nav-link " asp-action="Details" asp-route-isAct="@Model.Id">البيانات الاساسية</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">تعديل</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-controller="Users" asp-action="UpdateUserRoles" asp-route-id="@Model.Id">الصلاحيات</a>
                </li>
                <li class="nav-item">
                  <button class="nav-link active " data-bs-toggle="tab" data-bs-target="#profile-change-password">تغيير كلمة المرور</button>
                </li>
              </ul>
              <div class="tab-content pt-2">

                <div class="tab-focus fade pt-3 show" id="">
                  <!-- Change Password Form -->
                  <form asp-action="ChPass" method="post">
                      <input value="@Model.Id" name="Id" hidden />
                   
                    <div class="row mb-3">
                      <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">كلمة المرور الجديدة</label>
                      <div class="col-md-8 col-lg-9">
                        <input asp-for="NewPass" type="password" class="form-control" id="newPassword">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">تاكيد كلمة المرور</label>
                      <div class="col-md-8 col-lg-9">
                        <input asp-for="ConfirmPass" type="password" class="form-control" id="renewPassword">
                      </div>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="btn btn-primary">حفظ</button>
                      <a asp-action="Index"  class="btn btn-secondary">رجوع</a>
                    </div>
                  </form><!-- End Change Password Form -->

                </div>

              </div><!-- End Bordered Tabs -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
