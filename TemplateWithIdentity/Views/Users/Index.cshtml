@model List<UserVM>
@{
    var n = 0;
}



<style>
    body, h1, h2, h3, h4, h5 {
        font-family: 'Teshrin AR+LT' !important;
    }
</style>

<!-- Table -->
<div class="card">
    <div class="card-header ">
        <div class="head-label flex ">

            <h5 class="card-title mb-0">بيانات المستخدمين</h5>

        </div><div class="dt-action-buttons text-end pt-3 pt-md-0">
            <div class="form-group">
                <div class="col-md-3">
                </div>
                <div class="dt-buttons">

                    <a class="dt-button create-new btn btn-primary" asp-action="Create">
                        <span>
                            <i class="bx bx-plus me-0 me-lg-2"></i>
                            <span class="d-none d-sm-inline-block">اضافة مستخدم</span>
                        </span>
                    </a>
                </div>




            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table id="myTable" class="table table-striped table-bordered">
            <thead>
                <tr>

                    <th>رقم</th>
                    <th>الاسم</th>
                    <th>اسم المستخدم</th>
                    <th>رقم الهاتف </th>
                    <th>لديه حساب </th>

                    <th>الاجراءات</th>
                </tr>
            </thead>

            <tbody>
                
                @foreach (var item in Model)
                {
                    n = n + 1;
                    <tr>
                        <td>@n</td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>
                        <td>
                            @item.isClient
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item">تعديل</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item">عرض التفاصيل</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item">حذف</a>
                                    <a asp-action="ChPass" asp-route-id="@item.Id" class="dropdown-item">تغيير كلمة السر</a>
                                    <a asp-action="UpdateUserRoles" asp-route-id="@item.Id" class="dropdown-item">منح صلاحيات</a>
                                </div>
                            </div>

                        </td>
                    </tr>
                }



            </tbody>
        </table>
    </div>
</div>

<!--/ table -->
<!-- Add Modal -->
<div class="modal fade" id="AddModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">اضافة ادارة عامة</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="col-md-6 align-content-center mb-4">
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label for="select2Basic" class="form-label">اختر الجهة الرئيسي</label>
                            <select id="select2Basic" class="select2 form-select form-select-lg" data-allow-clear="true">
                                <option value="AK">التفتيش</option>
                                <option value="HI">القضاء</option>
                            </select>
                        </div>
                    </div>
                    <div class="row g-2">
                        <label for="select2Basic" class="form-label">اسم الجهة</label>
                        <input type="text"
                               class="form-control "
                               placeholder="اسم الجهة" />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">اغلاق</button>
                <button type="button" class="btn btn-primary">حفظ</button>
            </div>
        </div>
    </div>
</div>


<!-- Edit Modal -->
<div class="modal fade" id="EditModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">اضافة جهة فرعية</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="col-md-6 align-content-center mb-4">
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label for="select2Basic" class="form-label">اختر الجهة الرئيسي</label>
                            <select id="select2Basic" class="select2 form-select form-select-lg" data-allow-clear="true">
                                <option value="AK">التفتيش</option>
                                <option value="HI">القضاء</option>
                            </select>
                        </div>
                    </div>
                    <div class="row g-2">
                        <label for="select2Basic" class="form-label">اسم الجهة</label>
                        <input type="text"
                               class="form-control "
                               placeholder="اسم الجهة" />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">اغلاق</button>
                <button type="button" class="btn btn-primary">حفظ</button>
            </div>
        </div>
    </div>
</div>


